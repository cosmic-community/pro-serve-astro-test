---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CosmicBadge from '../../components/CosmicBadge.astro';
import { getServices, getServiceBySlug } from '../../lib/cosmic';
import type { Service } from '../../types';

export async function getStaticPaths() {
  const services = await getServices();
  return services.map((service) => ({
    params: { slug: service.slug },
  }));
}

const { slug } = Astro.params;
const service = await getServiceBySlug(slug as string);
const bucketSlug = import.meta.env.COSMIC_BUCKET_SLUG;

if (!service) {
  return Astro.redirect('/services');
}
---

<Layout 
  title={`${service.metadata?.name || service.title} - Professional Services`}
  description={service.metadata?.short_description || 'Professional service details'}
>
  <Header />
  
  <main class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      {/* Hero Section */}
      <div class="mb-12">
        {service.metadata?.featured_image && (
          <div class="mb-8 rounded-lg overflow-hidden">
            <img 
              src={`${service.metadata.featured_image.imgix_url}?w=1200&h=600&fit=crop&auto=format,compress`}
              alt={service.metadata?.name || service.title}
              class="w-full h-64 md:h-96 object-cover"
            />
          </div>
        )}
        
        <div class="mb-6">
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            {service.metadata?.name || service.title}
          </h1>
          
          {service.metadata?.short_description && (
            <p class="text-xl text-gray-600 mb-6">
              {service.metadata.short_description}
            </p>
          )}
          
          {service.metadata?.starting_price && (
            <div class="inline-block bg-primary-100 text-primary-800 px-4 py-2 rounded-lg font-semibold">
              Starting at {service.metadata.starting_price}
            </div>
          )}
        </div>
      </div>

      {/* Description Section */}
      {service.metadata?.description && (
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Service Overview</h2>
          <div class="prose prose-lg max-w-none" set:html={service.metadata.description}></div>
        </div>
      )}

      {/* Features Section */}
      {service.metadata?.features && service.metadata.features.length > 0 && (
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">What's Included</h2>
          <div class="grid md:grid-cols-2 gap-4">
            {service.metadata.features.map((feature: string) => (
              <div class="flex items-start">
                <svg class="h-6 w-6 text-primary-600 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">{feature}</span>
              </div>
            ))}
          </div>
        </div>
      )}

      {/* CTA Section */}
      <div class="bg-gray-50 rounded-lg p-8 text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">
          Ready to Get Started?
        </h2>
        <p class="text-gray-600 mb-6">
          Let's discuss how this service can help achieve your business goals.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="bg-primary-600 text-white hover:bg-primary-700 px-8 py-3 rounded-md font-semibold transition-colors">
            Get a Quote
          </a>
          <a href="/services" class="border border-gray-300 text-gray-700 hover:bg-gray-50 px-8 py-3 rounded-md font-semibold transition-colors">
            View All Services
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
  <CosmicBadge bucketSlug={bucketSlug} />
</Layout>