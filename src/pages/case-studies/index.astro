---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CaseStudyCard from '../../components/CaseStudyCard.astro';
import CosmicBadge from '../../components/CosmicBadge.astro';
import { getCaseStudies } from '../../lib/cosmic';

const caseStudies = await getCaseStudies();
const bucketSlug = import.meta.env.COSMIC_BUCKET_SLUG;
---

<Layout title="Case Studies - Real Results for Real Businesses" description="Explore our portfolio of successful projects and see how we've helped businesses like yours achieve remarkable results through expert solutions.">
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Case Studies
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Real results for real businesses. Explore our portfolio of successful projects and see how we've helped companies achieve remarkable outcomes.
        </p>
      </div>
    </div>
  </section>

  <!-- Case Studies Grid -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {caseStudies.length > 0 ? (
        <div class="grid lg:grid-cols-2 gap-8">
          {caseStudies.map((caseStudy) => (
            <CaseStudyCard caseStudy={caseStudy} />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">No Case Studies Available</h2>
          <p class="text-gray-600">Case studies will appear here once they are added to your Cosmic bucket.</p>
        </div>
      )}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-600 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Be Our Next Success Story?</h2>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        Let's discuss how we can help your business achieve similar results with our proven strategies and expert solutions.
      </p>
      <a href="/contact" class="bg-white text-primary-600 hover:bg-gray-100 px-8 py-3 rounded-md font-semibold text-lg transition-colors">
        Start Your Project
      </a>
    </div>
  </section>

  <Footer />
  <CosmicBadge bucketSlug={bucketSlug} />
</Layout>